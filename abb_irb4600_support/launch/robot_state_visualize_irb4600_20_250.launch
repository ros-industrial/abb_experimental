<?xml version="1.0" ?>
<!--
  Manipulator specific version of the state visualizer.

  Defaults provided for IRB 4600 20/2.50:
   - J23_coupled = false

  Usage:
    robot_state_visualize_irb4600_20_250.launch robot_ip:=<value>
-->
<launch>
  <arg name="robot_ip" doc="IP of the controller" />
  <arg name="J23_coupled" default="false" doc="If true, compensate for J2-J3 parallel linkage" />
  
  <rosparam command="load" file="$(find abb_irb4600_support)/config/joint_names_irb4600_20_250.yaml" />
  
  <include file="$(find abb_driver)/launch/robot_interface.launch">
    <arg name="robot_ip"    value="$(arg robot_ip)" />
    <arg name="J23_coupled" value="$(arg J23_coupled)" />
  </include>
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  
  <include file="$(find abb_irb4600_support)/launch/load_irb4600_20_250.launch" />
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find industrial_robot_client)/config/robot_state_visualize.rviz" required="true" />
</launch>
